{
  "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
      "vue",
      "javascript",
      "javascriptreact",
      "html",
  ],
  "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "scss.lint.unknownAtRules": "ignore" // This is needed for eslint to not warn about using @apply
}